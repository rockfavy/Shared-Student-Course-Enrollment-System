@page "/register"
@using StudentCourseEnrollment.Shared.DTOs.Auth
@using StudentCourseEnrollment.Frontend.Clients
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http
@attribute [AllowAnonymous]
@inject IAuthClient AuthClient
@inject NavigationManager Navigation
@inject IWebAssemblyHostEnvironment HostEnvironment
@inject StudentCourseEnrollment.Frontend.Services.CustomAuthenticationStateProvider? AuthStateProvider

<PageTitle>Register</PageTitle>

@if (HostEnvironment.IsProduction() && IsEntraIdConfigured())
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body p-4 text-center">
                        <h2 class="mb-4">Registration Not Available</h2>
                        <p class="mb-4">This application uses Microsoft Entra ID for authentication. Please contact your administrator to be added to the system.</p>
                        <a href="/login" class="btn btn-primary">Go to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Register</h2>
                    
                    <EditForm Model="@_registerModel" OnValidSubmit="@HandleRegister">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText @bind-Value="_registerModel.Email" 
                                      id="email" 
                                      class="form-control" 
                                      type="email" />
                            <ValidationMessage For="@(() => _registerModel.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <InputText @bind-Value="_registerModel.FirstName" 
                                      id="firstName" 
                                      class="form-control" />
                            <ValidationMessage For="@(() => _registerModel.FirstName)" />
                        </div>

                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <InputText @bind-Value="_registerModel.LastName" 
                                      id="lastName" 
                                      class="form-control" />
                            <ValidationMessage For="@(() => _registerModel.LastName)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <InputText @bind-Value="_registerModel.Password" 
                                          id="password" 
                                          class="form-control" 
                                          type="@(showPassword ? "text" : "password")" />
                                <button class="btn btn-outline-secondary" type="button" @onclick="TogglePasswordVisibility">
                                    @if (showPassword)
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash" viewBox="0 0 16 16">
                                            <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
                                            <path d="M11.297 9.176a3.087 3.087 0 0 0-4.24-4.24l.823.823a2.5 2.5 0 0 1 2.829 2.829zm-2.715 2.715a2.5 2.5 0 0 1-2.83-2.83l.823-.823a3.087 3.087 0 0 0 4.24 4.24z"/>
                                            <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                        </svg>
                                    }
                                </button>
                            </div>
                            <ValidationMessage For="@(() => _registerModel.Password)" />
                        </div>

                        @if (!string.IsNullOrWhiteSpace(_errorMessage))
                        {
                            <div class="alert alert-danger mb-3">@_errorMessage</div>
                        }

                        <button type="submit" 
                                class="btn btn-primary w-100 mb-3" 
                                disabled="@_isSubmitting">
                            @if (_isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Registering...</span>
                            }
                            else
                            {
                                <span>Register</span>
                            }
                        </button>
                    </EditForm>

                        <div class="text-center">
                            Already have an account? <a href="/login">Login here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private IConfiguration? Configuration { get; set; }
    private RegisterModel _registerModel = new();
    private string _errorMessage = string.Empty;
    private bool _isSubmitting = false;

    private async Task HandleRegister()
    {
        _errorMessage = string.Empty;
        _isSubmitting = true;

        try
        {
            var registerRequest = new RegisterRequest(_registerModel.Email, _registerModel.FirstName, _registerModel.LastName, _registerModel.Password);
            var response = await AuthClient.RegisterAsync(registerRequest);
            
            if (response != null)
            {
                Navigation.NavigateTo("/login");
            }
            else
            {
                _errorMessage = "Registration failed. Please try again.";
            }
        }
        catch (HttpRequestException ex)
        {
            _errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
            StateHasChanged();
        }
    }

    private bool showPassword = false;

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private bool IsEntraIdConfigured()
    {
        if (Configuration == null) return false;
        var authority = Configuration["AzureAd:Authority"];
        var clientId = Configuration["AzureAd:ClientId"];
        return !string.IsNullOrEmpty(authority) && !string.IsNullOrEmpty(clientId);
    }

    private class RegisterModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [MinLength(1)]
        public string FirstName { get; set; } = string.Empty;

        [Required]
        [MinLength(1)]
        public string LastName { get; set; } = string.Empty;

        [Required]
        [MinLength(6)]
        public string Password { get; set; } = string.Empty;
    }
}
